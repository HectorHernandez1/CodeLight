{
    "name": "codelight",
    "version": "1.1.0",
    "description": "A lightweight, minimalist code editor for macOS",
    "main": "src/main.js",
    "author": "Hector",
    "license": "MIT",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "build:mac": "electron-builder --mac"
    },
    "dependencies": {
        "electron-updater": "^6.7.3",
        "monaco-editor": "^0.45.0"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.codelight.app",
        "productName": "CodeLight",
        "mac": {
            "category": "public.app-category.developer-tools",
            "target": [
                "dmg"
            ],
            "icon": "assets/icon.png"
        },
        "files": [
            "src/**/*",
            "assets/**/*",
            "node_modules/**/*"
        ],
        "directories": {
            "output": "dist"
        }
    }
}